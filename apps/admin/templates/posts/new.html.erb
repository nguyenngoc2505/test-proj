<h1>New Posts</h1>

<form id="new-post" method="post" action="/admin/posts">
  <div class="form-group">
    <p class="required">
      <label for="title">Title</label>
      <input type="text" name="post[title]" value="<%= post.title %>" placeholder="Title" class="form-control" required>
    </p>
  </div>
  <div class="form-group">
    <p>
      <label for="content">Content</label>
      <textarea id="editor" name="post[content]" value="<%=post.content  %>" style="width: 100%; height: 240px; display: none;" dir="ltr" required>
      </textarea>
    </p>
  </div>

  <p class="buttons">
    <button type="submit" class="btn btn-default">Create</button> or <a href="/admin/posts" class="btn btn-default">Back</a>
  </p>
</form>

<script>
  $(function(){
    $('#editor').redactor({
      focus: true,
      buttonSource: true
    });
  });
</script>
