<h1>Edit Posts</h1>
<form id="edit-post-<%= post.id %>" method="post" action="/admin/posts/<%= post.id %>">
  <input type="hidden" name="_method" value="patch" />

<!-- <form id="edit-post-<%= post.id %>" method="patch" action="/admin/posts/<%= post.id %>"> -->
  <div class="form-group">
    <p class="required">
      <label for="title">Title</label>
      <input type="text" name="post[title]" value="<%= post.title %>" placeholder="Title" class="form-control" required>
    </p>
  </div>
  <div class="form-group">
    <p>
      <label for="content">Content</label>
      <textarea name="post[content]" placeholder="Content" class="editor"><%= post.content %></textarea>
      
    </p>
  </div>

  <p class="buttons">
    <button type="submit" class="btn btn-default">Update</button> or <a href="/admin/posts" class="btn btn-default">Back</a>
  </p>
</form>

<script>
  $(function(){
    $('.editor').redactor({
      focus: true,
      buttonSource: true
    });
  });
</script>
